<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.listrepositori.github">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ListRepositoryGitHubApi"
        android:allowBackup="true"
        android:icon="@mipmap/github"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".view.ui.ListRepositoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.ListPullRequestActivity" />
    </application>

</manifest>